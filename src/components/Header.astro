---
interface Props {
  transparent?: boolean;
}

const { transparent = true } = Astro.props;
---

<header class="fixed top-0 left-0 w-full z-50 transition-all duration-300 bg-transparent">
  <nav class="flex items-center justify-between px-6 md:px-12 py-6">
    <!-- Logo -->
    <a href="/" class="text-xl font-serif tracking-wide">
      MA3.0<span class="text-xs align-super font-sans ml-1">Â®</span>
    </a>
    
    <!-- Navigation Links -->
    <div class="hidden md:flex items-center gap-8 text-sm tracking-wide">
      <a href="#about" class="hover:opacity-60 transition-opacity">About</a>
      <a href="#news" class="hover:opacity-60 transition-opacity">News</a>
      <a href="#projects" class="hover:opacity-60 transition-opacity">Projects</a>
      <a href="#contact" class="hover:opacity-60 transition-opacity">Contact</a>
      
      <!-- Theme Toggle -->
      <button id="theme-toggle" class="w-8 h-8 flex items-center justify-center rounded-full border border-current opacity-60 hover:opacity-100 transition-opacity" aria-label="Toggle theme">
        <svg class="w-4 h-4 dark-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <svg class="w-4 h-4 light-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-toggle" class="md:hidden flex flex-col gap-1.5 z-50 relative" aria-label="Menu">
      <span class="w-6 h-px bg-current transition-transform duration-300 origin-center"></span>
      <span class="w-6 h-px bg-current transition-transform duration-300 origin-center"></span>
    </button>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-theme z-40 translate-x-full transition-transform duration-500 ease-expo pointer-events-none">
    <div class="flex flex-col items-center justify-center h-full gap-12 text-3xl font-serif">
      <a href="#about" class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-100">About</a>
      <a href="#news" class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-200">News</a>
      <a href="#work" class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-300">Work</a>
      <a href="#contact" class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-400">Contact</a>
      
      <!-- Theme Toggle in Mobile Menu -->
      <button id="mobile-theme-toggle" class="mt-8 px-6 py-3 rounded-full border border-current text-sm tracking-widest uppercase opacity-0 translate-y-4 transition-all duration-500 delay-500">
        Switch Theme
      </button>
    </div>
  </div>
</header>

<script>
  // Theme toggle functionality
  const setupThemeToggle = (buttonId) => {
    const toggle = document.getElementById(buttonId);
    const html = document.documentElement;
    const darkIcon = toggle?.querySelector('.dark-icon');
    const lightIcon = toggle?.querySelector('.light-icon');
    
    toggle?.addEventListener('click', () => {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      if (newTheme === 'light') {
        html.setAttribute('data-theme', 'light');
      } else {
        html.removeAttribute('data-theme');
      }
      
      localStorage.setItem('theme', newTheme);
      darkIcon?.classList.toggle('hidden');
      lightIcon?.classList.toggle('hidden');
    });
  };

  setupThemeToggle('theme-toggle');
  setupThemeToggle('mobile-theme-toggle');

  // Mobile Menu Functionality
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const menuSpans = menuToggle?.querySelectorAll('span');
  const mobileLinks = document.querySelectorAll('.mobile-link');
  let isMenuOpen = false;

  const toggleMenu = () => {
    isMenuOpen = !isMenuOpen;
    
    // Toggle menu visibility
    menu?.classList.toggle('translate-x-full', !isMenuOpen);
    menu?.classList.toggle('pointer-events-none', !isMenuOpen);
    
    // Animate hamburger to X
    if (menuSpans) {
      menuSpans[0].style.transform = isMenuOpen ? 'translateY(3.5px) rotate(45deg)' : '';
      menuSpans[1].style.transform = isMenuOpen ? 'translateY(-3.5px) rotate(-45deg)' : '';
    }

    // Animate Links
    mobileLinks.forEach(link => {
      link.classList.toggle('opacity-100', isMenuOpen);
      link.classList.toggle('translate-y-0', isMenuOpen);
    });

    document.body.style.overflow = isMenuOpen ? 'hidden' : '';
  };

  menuToggle?.addEventListener('click', toggleMenu);
  mobileLinks.forEach(link => link.addEventListener('click', toggleMenu));
</script>

<style>
  header {
    font-family: var(--font-sans);
  }
  
  header > nav > a:first-child {
    font-family: var(--font-serif);
  }

  .ease-expo {
    transition-timing-function: cubic-bezier(0.19, 1, 0.22, 1);
  }
</style>
