  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-theme z-40 translate-x-full transition-transform duration-500 ease-expo pointer-events-none p-12 pt-32">
    <div class="flex flex-col justify-start h-full gap-8 text-4xl font-serif">
      <a href="/news" class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-100 cursor-pointer">
        <span class="lang-en">News</span>
        <span class="lang-ja">„Éã„É•„Éº„Çπ</span>
