</header>

<script>
  // Theme toggle functionality
  const setupThemeToggle = (buttonId: string) => {
    const toggle = document.getElementById(buttonId);
    if (!toggle) return;
    
    const html = document.documentElement;
    const darkIcon = toggle.querySelector('.dark-icon');
    const lightIcon = toggle.querySelector('.light-icon');

    const updateIcons = () => {
      const isLight = html.getAttribute('data-theme') === 'light';
      if (isLight) {
        darkIcon?.classList.add('hidden');
        lightIcon?.classList.remove('hidden');
      } else {
        darkIcon?.classList.remove('hidden');
        lightIcon?.classList.add('hidden');
      }
    };
    
    // Initial icon state
    updateIcons();

    // Listen for theme changes to update icons
    window.addEventListener('theme-changed', updateIcons);
    
    toggle.addEventListener('click', () => {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';
      
      // Dispatch transition event
      window.dispatchEvent(new CustomEvent('theme-transition', { 
        detail: { theme: newTheme } 
      }));
    });
  };

  setupThemeToggle('theme-toggle');
  setupThemeToggle('mobile-theme-toggle');

  // Language toggle functionality
  const setupLangToggle = (enId: string, jaId: string) => {
    const enBtn = document.getElementById(enId);
    const jaBtn = document.getElementById(jaId);
    const html = document.documentElement;

    const updateActiveState = () => {
      const currentLang = html.getAttribute('lang') || 'en';
      if (currentLang === 'en') {
        enBtn?.classList.add('opacity-100');
        enBtn?.classList.remove('opacity-40');
        jaBtn?.classList.add('opacity-40');
        jaBtn?.classList.remove('opacity-100');
      } else {
        jaBtn?.classList.add('opacity-100');
        jaBtn?.classList.remove('opacity-40');
        enBtn?.classList.add('opacity-40');
        enBtn?.classList.remove('opacity-100');
      }
    };

    const setLang = (lang: string) => {
      html.setAttribute('lang', lang);
      localStorage.setItem('lang', lang);
      updateActiveState();
      // Dispatch event for other components
      window.dispatchEvent(new CustomEvent('lang-changed', { detail: { lang } }));
    };

    enBtn?.addEventListener('click', () => setLang('en'));
    jaBtn?.addEventListener('click', () => setLang('ja'));
    
    // Initial state
    updateActiveState();
  };

  setupLangToggle('lang-en', 'lang-ja');
  setupLangToggle('mobile-lang-en', 'mobile-lang-ja');

  // Greeting logic
  const updateGreeting = () => {
    const greetingEl = document.getElementById('header-greeting');
    if (!greetingEl) return;

    const now = new Date();
    const hour = now.getHours();
    const lang = document.documentElement.getAttribute('lang') || 'en';

    let greeting = '';
    let emoji = '';

    if (hour >= 5 && hour < 12) {
      greeting = lang === 'ja' ? '„Åä„ÅØ„Çà„ÅÜ' : 'Good Morning';
      emoji = '‚òÄÔ∏è';
    } else if (hour >= 12 && hour < 18) {
      greeting = lang === 'ja' ? '„Åì„Çì„Å´„Å°„ÅØ' : 'Good Afternoon';
      emoji = 'üå§Ô∏è';
    } else {
      greeting = lang === 'ja' ? '„Åì„Çì„Å∞„Çì„ÅØ' : 'Good Evening';
      emoji = 'üåô';
    }

    // Fade out, change text, fade in
    greetingEl.classList.remove('opacity-100');
    greetingEl.classList.add('opacity-0');
    
    setTimeout(() => {
      greetingEl.innerHTML = `${greeting} <span class="ml-1">${emoji}</span>`;
      greetingEl.classList.remove('opacity-0');
      greetingEl.classList.add('opacity-100');
    }, 300);
  };

  // Initial greeting
  updateGreeting();

  // Update greeting on language change
  window.addEventListener('lang-changed', updateGreeting);

  // Header Swap Logic (Greeting vs Logo)
  const headerGreeting = document.getElementById('header-greeting');
  const headerLogo = document.getElementById('header-logo');
  const heroSection = document.querySelector('section'); // Target first section (Hero)

  const swapHeaderContent = (showGreeting: boolean) => {
    if (showGreeting) {
      headerGreeting?.classList.remove('opacity-0', '-translate-y-8');
      headerGreeting?.classList.add('opacity-100', 'translate-y-0');
      headerLogo?.classList.remove('opacity-100', 'translate-y-0');
      headerLogo?.classList.add('opacity-0', 'translate-y-8');
    } else {
      headerGreeting?.classList.remove('opacity-100', 'translate-y-0');
      headerGreeting?.classList.add('opacity-0', '-translate-y-8');
      headerLogo?.classList.remove('opacity-0', 'translate-y-8');
      headerLogo?.classList.add('opacity-100', 'translate-y-0');
    }
  };

  if (heroSection && headerGreeting && headerLogo) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        swapHeaderContent(entry.isIntersecting);
      });
    }, { threshold: 0.1 });

    observer.observe(heroSection);
  } else {
    // If no hero section (other routes), show logo immediately
    swapHeaderContent(false);
  }

  // Mobile Menu Functionality
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link');
  let isMenuOpen = false;

  const toggleMenu = () => {
    isMenuOpen = !isMenuOpen;
    
    // Toggle menu visibility
    menu?.classList.toggle('translate-x-full', !isMenuOpen);
    menu?.classList.toggle('pointer-events-none', !isMenuOpen);
    
    // Animate Sakura
    const flower = menuToggle?.querySelector('.flower-container');
    if (flower instanceof HTMLElement) {
      flower.style.transform = isMenuOpen ? 'rotate(180deg) scale(1.1)' : '';
    }

    // Toggle Menu/Close text
    const menuText = menuToggle?.querySelector('.menu-text');
    const closeText = menuToggle?.querySelector('.close-text');
    if (menuText && closeText) {
      menuText.classList.toggle('hidden', isMenuOpen);
      closeText.classList.toggle('hidden', !isMenuOpen);
    }

    // Animate Links
    mobileLinks.forEach(link => {
      link.classList.toggle('opacity-100', isMenuOpen);
      link.classList.toggle('translate-y-0', isMenuOpen);
    });

    // Animate Controls
    const mobileControls = document.querySelector('.mobile-controls');
    if (mobileControls) {
      mobileControls.classList.toggle('opacity-100', isMenuOpen);
      mobileControls.classList.toggle('translate-y-0', isMenuOpen);
    }

    document.body.style.overflow = isMenuOpen ? 'hidden' : '';
  };

  menuToggle?.addEventListener('click', toggleMenu);
  mobileLinks.forEach(link => link.addEventListener('click', toggleMenu));
</script>

<style>
  header {
    font-family: var(--font-sans);
  }
  
  header > nav > a:first-child {
    font-family: var(--font-serif);
  }

  .ease-expo {
    transition-timing-function: cubic-bezier(0.19, 1, 0.22, 1);
  }
  
  /* Bubble backgrounds - hidden by default */
  .header-bubble {
    background-color: transparent;
    backdrop-filter: none;
  }
  
  /* Show bubble backgrounds when scrolled */
  header.scrolled .header-bubble {
    background-color: var(--color-bg);
    backdrop-filter: blur(12px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }
  
  /* Light mode adjustments */
  :root[data-theme="light"] header.scrolled .header-bubble {
    background-color: rgba(255, 255, 255, 0.85);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
  }
  
  /* Dark mode adjustments */
  :root:not([data-theme="light"]) header.scrolled .header-bubble {
    background-color: rgba(0, 0, 0, 0.75);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }
</style>

<script is:inline>
  // Add scrolled class to header when past hero
  document.addEventListener('DOMContentLoaded', () => {
    const mainHeader = document.getElementById('main-header');
    const heroSection = document.getElementById('hero');
    
    const checkScroll = () => {
      if (!mainHeader) return;
      
      // Get scroll position from multiple sources
      const fullpageWrapper = document.getElementById('fullpage-wrapper');
      const wrapperScroll = fullpageWrapper ? fullpageWrapper.scrollTop : 0;
      const windowScroll = window.pageYOffset || document.documentElement.scrollTop || document.body.scrollTop;
      
      // Use whichever has a value (mobile uses window, desktop uses wrapper)
      const scrollTop = Math.max(wrapperScroll, windowScroll);
      
      const threshold = heroSection ? heroSection.offsetHeight - 100 : 100;
      
      if (scrollTop > threshold) {
        mainHeader.classList.add('scrolled');
      } else {
        mainHeader.classList.remove('scrolled');
      }
    };
    
    // Listen to window scroll
    window.addEventListener('scroll', checkScroll, { passive: true });
    document.body.addEventListener('scroll', checkScroll, { passive: true });
    
    // Listen to fullpage wrapper scroll if it exists
    const fullpageWrapper = document.getElementById('fullpage-wrapper');
    if (fullpageWrapper) {
      fullpageWrapper.addEventListener('scroll', checkScroll, { passive: true });
    }
    
    // Also check periodically for section changes (works with fullpage snapping)
    setInterval(checkScroll, 200);
    
    // Initial check
    checkScroll();
  });
</script>
