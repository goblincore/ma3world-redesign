      <a href={isHome ? "#about" : "/#about"} class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-[150ms] cursor-pointer">
        <span class="lang-en">About</span>
        <span class="lang-ja">ÁßÅ„Åü„Å°„Å´„Å§„ÅÑ„Å¶</span>
      </a>
      <a href={isHome ? "#projects" : "/#projects"} class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-[200ms] cursor-pointer">
        <span class="lang-en">Projects</span>
        <span class="lang-ja">„Éó„É≠„Ç∏„Çß„ÇØ„Éà</span>
      </a>
      <a href={isHome ? "#contact" : "/#contact"} class="mobile-link opacity-0 translate-y-4 transition-all duration-500 delay-[250ms] cursor-pointer">
        <span class="lang-en">Contact</span>
        <span class="lang-ja">„ÅäÂïè„ÅÑÂêà„Çè„Åõ</span>
      </a>
      
      <div class="mt-auto pb-12 opacity-0 translate-y-4 transition-all duration-500 delay-[350ms] mobile-controls">
        <!-- Theme Toggle -->
        <button id="mobile-theme-toggle" class="flex items-center gap-4 text-sm tracking-widest uppercase border border-current rounded-full px-6 py-3 hover:opacity-60 transition-opacity cursor-pointer">
          <span class="lang-en">Switch Theme</span>
          <span class="lang-ja">„ÉÜ„Éº„ÉûÂàáÊõø</span>
        </button>

        <!-- Language Toggle -->
        <div id="mobile-lang-toggle" class="mt-6 flex items-center gap-6 text-xl font-bold tracking-widest">
          <button id="mobile-lang-en" class="hover:opacity-60 transition-opacity cursor-pointer">EN</button>
          <span class="opacity-30 text-2xl">/</span>
          <button id="mobile-lang-ja" class="hover:opacity-60 transition-opacity cursor-pointer">JP</button>
        </div>
      </div>
