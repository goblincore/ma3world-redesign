---
interface Project {
  title: string;
  category: string;
  year: string;
}

const projects: Project[] = [
  { title: "Project Alpha", category: "Brand Identity", year: "2024" },
  { title: "Project Beta", category: "Web Design", year: "2024" },
];
---

<section id="work" class="bg-theme">
  <div class="max-w-7xl w-full container-inner">
    <!-- Section Header -->
    <div class="flex items-end justify-between mb-16">
      <div>
        <span class="text-xs tracking-widest uppercase text-theme-muted block mb-2">Selected Work</span>
        <h2 class="font-serif text-4xl md:text-6xl">Projects</h2>
      </div>
      <a href="/work" class="hidden md:block text-sm tracking-wide border-b border-current pb-1 hover:opacity-60">
        View all projects
      </a>
    </div>
    
    <!-- Project Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      {projects.map((project, index) => (
        <a href={`/work/${project.title.toLowerCase().replace(' ', '-')}`} class="group block">
          <!-- Image Placeholder -->
          <div class="aspect-[4/3] bg-theme-muted rounded-sm overflow-hidden mb-6 relative">
            <div class="absolute inset-0 bg-theme-alt group-hover:scale-105 transition-transform duration-700"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-6xl font-serif text-theme-muted group-hover:opacity-80 transition-opacity">
                0{index + 1}
              </span>
            </div>
          </div>
          
          <!-- Project Info -->
          <div class="flex items-start justify-between">
            <div>
              <h3 class="text-xl md:text-2xl font-medium mb-1 group-hover:opacity-60 transition-opacity">
                {project.title}
              </h3>
              <span class="text-sm text-theme-muted">{project.category}</span>
            </div>
            <span class="text-sm text-theme-muted">{project.year}</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  #work {
    padding-top: 160px;
    padding-bottom: 160px;
  }

  @media (max-width: 768px) {
    #work {
      padding-top: 80px;
      padding-bottom: 80px;
    }
  }

  .container-inner {
    margin-left: auto;
    margin-right: auto;
  }

  h2 {
    font-family: var(--font-serif);
  }
</style>
