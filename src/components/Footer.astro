---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "Instagram", url: "#" },
  { name: "Twitter", url: "#" },
  { name: "LinkedIn", url: "#" },
  { name: "Dribbble", url: "#" },
];

const navLinks = [
  { name: "Work", nameJa: "実績", url: "#work" },
  { name: "About", nameJa: "私たちについて", url: "#about" },
  { name: "Clients", nameJa: "クライアント", url: "#clients" },
  { name: "Contact", nameJa: "お問い合わせ", url: "#contact" },
];
---

<footer id="contact" class="bg-theme py-40 md:py-56 px-6 md:px-12 flex justify-center">
  <div class="max-w-7xl w-full">
    <!-- Top Section -->
    <div class="grid md:grid-cols-2 gap-16 md:gap-24 mb-24">
      <!-- CTA -->
      <div>
        <span class="text-xs tracking-widest uppercase text-theme-muted block mb-4">
          <span class="lang-en">Get in Touch</span>
          <span class="lang-ja">お問い合わせ</span>
        </span>
        <h2 class="font-serif text-4xl md:text-6xl mb-8">
          <span class="lang-en">Let's create<br/>something together</span>
          <span class="lang-ja">共に、新しい価値を<br/>創り上げましょう</span>
        </h2>
        <a href="mailto:hello@ma3world.com" class="inline-block text-2xl md:text-3xl hover:opacity-60 transition-opacity border-b border-current pb-2">
          hello@ma3world.com
        </a>
      </div>
      
      <!-- Links -->
      <div class="flex flex-col md:flex-row gap-12 md:gap-24">
        <!-- Navigation -->
        <div>
          <span class="text-xs tracking-widest uppercase text-theme-muted block mb-4">
            <span class="lang-en">Navigation</span>
            <span class="lang-ja">ナビゲーション</span>
          </span>
          <ul class="space-y-3">
            {navLinks.map((link) => (
              <li>
                <a href={link.url} class="text-lg hover:opacity-60 transition-opacity">
                  <span class="lang-en">{link.name}</span>
                  <span class="lang-ja">{link.nameJa}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Social -->
        <div>
          <span class="text-xs tracking-widest uppercase text-theme-muted block mb-4">
            <span class="lang-en">Follow</span>
            <span class="lang-ja">フォロー</span>
          </span>
          <ul class="space-y-3">
            {socialLinks.map((link) => (
              <li>
                <a href={link.url} class="text-lg hover:opacity-60 transition-opacity">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6 pt-8 border-t border-theme">
      <!-- Logo -->
      <a href="/" class="font-serif text-2xl">
        MA3.0<span class="text-xs align-super font-sans ml-1">®</span>
      </a>
      
      <!-- Copyright -->
      <p class="text-sm text-theme-muted">
        <span class="lang-en">© {currentYear} MA3.0 World. All rights reserved.</span>
        <span class="lang-ja">© {currentYear} MA3.0 World. 無断複写・転載を禁じます。</span>
      </p>
    </div>
  </div>
</footer>

<style>
  h2, .font-serif {
    font-family: var(--font-serif);
  }
</style>
