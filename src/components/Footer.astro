---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "Instagram", url: "#" },
  { name: "Twitter", url: "#" },
  { name: "LinkedIn", url: "#" },
  { name: "Dribbble", url: "#" },
];

const navLinks = [
  { name: "Work", url: "#work" },
  { name: "About", url: "#about" },
  { name: "Clients", url: "#clients" },
  { name: "Contact", url: "#contact" },
];
---

<footer id="contact" class="bg-theme border-t border-theme flex justify-center px-6 md:px-12">
  <div class="max-w-7xl w-full container-inner">
    <!-- Top Section -->
    <div class="grid md:grid-cols-2 gap-16 md:gap-24 mb-24">
      <!-- CTA -->
      <div>
        <span class="text-xs tracking-widest uppercase text-theme-muted block mb-4">Get in Touch</span>
        <h2 class="font-serif text-4xl md:text-6xl mb-8">
          Let's create<br/>something together
        </h2>
        <a href="mailto:hello@ma3world.com" class="inline-block text-2xl md:text-3xl hover:opacity-60 transition-opacity border-b border-current pb-2">
          hello@ma3world.com
        </a>
      </div>
      
      <!-- Links -->
      <div class="flex flex-col md:flex-row gap-12 md:gap-24">
        <!-- Navigation -->
        <div>
          <span class="text-xs tracking-widest uppercase text-theme-muted block mb-4">Navigation</span>
          <ul class="space-y-3">
            {navLinks.map((link) => (
              <li>
                <a href={link.url} class="text-lg hover:opacity-60 transition-opacity">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Social -->
        <div>
          <span class="text-xs tracking-widest uppercase text-theme-muted block mb-4">Follow</span>
          <ul class="space-y-3">
            {socialLinks.map((link) => (
              <li>
                <a href={link.url} class="text-lg hover:opacity-60 transition-opacity">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6 pt-8 border-t border-theme">
      <!-- Logo -->
      <a href="/" class="font-serif text-2xl">
        MA3.0<span class="text-xs align-super font-sans ml-1">®</span>
      </a>
      
      <!-- Copyright -->
      <p class="text-sm text-theme-muted">
        © {currentYear} MA3.0 World. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  footer {
    padding-top: 160px;
    padding-bottom: 160px;
  }

  @media (max-width: 768px) {
    footer {
      padding-top: 80px;
      padding-bottom: 80px;
    }
  }

  .container-inner {
    margin-left: auto;
    margin-right: auto;
  }

  h2, .font-serif {
    font-family: var(--font-serif);
  }
</style>
