<div class="butterfly-loader absolute inset-0 overflow-hidden flex items-center justify-center bg-[#050505]">
  <!-- Starry Sky -->
  <div class="stars-container absolute inset-0">
    {[...Array(50)].map((_, i) => (
      <div 
        class="star absolute rounded-full bg-white opacity-0"
        style={{
          width: Math.random() * 2 + 1 + 'px',
          height: Math.random() * 2 + 1 + 'px',
          left: Math.random() * 100 + '%',
          top: Math.random() * 100 + '%',
          animationDelay: Math.random() * 3 + 's',
          animationDuration: Math.random() * 2 + 2 + 's'
        }}
      ></div>
    ))}
  </div>

  <!-- Butterflies -->
  <div class="butterflies-container relative w-full h-full max-w-lg max-h-lg">
    {[...Array(3)].map((_, i) => (
      <div 
        class={`butterfly butterfly-${i+1} absolute`}
        style={{
          animationDelay: i * 1.5 + 's'
        }}
      >
        <svg viewBox="0 0 50 50" class="w-12 h-12 fill-white/80">
          <path d="M25 25 Q15 10 5 15 Q0 25 25 25 Q50 25 45 15 Q35 10 25 25 Z" class="wings-bottom" />
          <path d="M25 25 Q10 0 5 10 Q0 30 25 25 Q50 30 45 10 Q40 0 25 25 Z" class="wings-top" />
          <rect x="24.5" y="15" width="1" height="20" rx="0.5" fill="white" />
        </svg>
      </div>
    ))}
  </div>

  <div class="loading-text absolute bottom-24 text-white/40 text-[10px] uppercase tracking-[0.4em] font-bold animate-pulse">
    Loading Experience
  </div>
</div>

<style>
  .star {
    animation: twinkle linear infinite;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0; transform: scale(0.5); }
    50% { opacity: 0.8; transform: scale(1.2); }
  }

  .butterfly {
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.4));
    opacity: 0;
    animation: fly 8s infinite ease-in-out;
  }

  .wings-top, .wings-bottom {
    transform-origin: 25px 25px;
    animation: flap 0.3s infinite ease-in-out alternate;
  }

  @keyframes flap {
    from { transform: scaleX(1); }
    to { transform: scaleX(0.2); }
  }

  @keyframes fly {
    0% {
      opacity: 0;
      transform: translate(-50px, 50px) rotate(-20deg) scale(0.5);
    }
    10% { opacity: 1; }
    40% {
      transform: translate(100px, -100px) rotate(10deg) scale(1);
    }
    60% {
      transform: translate(200px, 50px) rotate(40deg) scale(0.8);
    }
    90% { opacity: 1; }
    100% {
      opacity: 0;
      transform: translate(400px, -200px) rotate(20deg) scale(1.2);
    }
  }

  /* Variations for different butterflies */
  .butterfly-1 { top: 40%; left: 20%; animation-duration: 9s; }
  .butterfly-2 { top: 60%; left: 10%; animation-duration: 11s; animation-delay: 2s; }
  .butterfly-3 { top: 30%; left: 30%; animation-duration: 7s; animation-delay: 4s; }
</style>
