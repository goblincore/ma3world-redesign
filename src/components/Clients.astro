---
const clients = [
  "Client One",
  "Client Two", 
  "Client Three",
  "Client Four",
  "Client Five",
  "Client Six",
  "Client Seven",
  "Client Eight",
  "Client Nine",
  "Client Ten",
  "Client Eleven",
  "Client Twelve",
];
---

<section id="clients" class="bg-theme-alt">
  <div class="max-w-7xl w-full container-inner">
    <!-- Section Header -->
    <div class="mb-16">
      <span class="text-xs tracking-widest uppercase text-theme-muted block mb-2">Trusted By</span>
      <h2 class="font-serif text-4xl md:text-6xl">Our Clients</h2>
    </div>
    
    <!-- Client Logo Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8 md:gap-12">
      {clients.map((client) => (
        <div class="flex items-center justify-center py-8 px-4 border border-theme rounded-sm hover:border-current transition-colors cursor-default">
          <span class="text-sm font-medium tracking-wide text-theme-muted text-center">{client}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  #clients {
    padding-top: 160px;
    padding-bottom: 160px;
    padding-left: 40px;
    padding-right: 40px;
  }

  @media (max-width: 768px) {
    #clients {
      padding-top: 80px;
      padding-bottom: 80px;
      padding-left: 20px;
      padding-right: 20px;
    }
  }

  .container-inner {
    margin-left: auto;
    margin-right: auto;
  }

  h2 {
    font-family: var(--font-serif);
  }
</style>
