---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const projects = [
  { 
    title: "Imabari Towel Digital Art Gallery", 
    titleJa: "今治タオル デジタルアートギャラリー",
    slug: "imbari-towel",
    category: "Digital Innovation / Art", 
    categoryJa: "デジタル・イノベーション / アート",
    year: "2024",
    image: "/project/imabari-dag/towelbridge.png",
    description: "A hybrid cultural innovation project bridging traditional craftsmanship with digital art."
  },
  { 
    title: "MA3.0 YUA Rice Leather Fukushima Reconstruction Support Cheer Project", 
    titleJa: "MA3.0 YUA ライスレザー福島復興支援応援プロジェクト",
    slug: "fukushima-yuacheer",
    category: "Social Innovation / Design", 
    categoryJa: "ソーシャル・イノベーション / デザイン",
    year: "2024",
    image: "/project/fukushima/yuacheer.jpeg",
    description: "Revitalizing local industry through sustainable, locally-sourced vegan leather."
  },
  { 
    title: "MA3.0 Avatar", 
    titleJa: "MA3.0 アバター",
    slug: "avatar",
    category: "Talent / Technology", 
    categoryJa: "タレント / テクノロジー",
    year: "2024",
    image: "/project/ma3avatar/ma3avatarthumb.jpg",
    description: "Digital avatars merging talent × technology × local identity."
  },
  { 
    title: "Bishoujo-Zukan × NY", 
    titleJa: "美少女図鑑 × NY",
    slug: "bishoujo-zukan-ny",
    category: "Platform / Empowerment", 
    categoryJa: "プラットフォーム / エンパワーメント",
    year: "2024",
    image: "/project/bzukan/bzukanthumb.jpg",
    description: "A platform connecting Japan and NYC to empower female creators."
  }
];
---

<Layout title="Projects | MA3.0 World">
  <Header />
  
  <main class="bg-theme pt-32 pb-32 px-6 md:px-12 min-h-screen">
    <div class="max-w-7xl mx-auto">
      <header class="mb-24 flex flex-col md:flex-row md:items-end justify-between gap-8">
        <div class="max-w-2xl">
          <span class="text-[10px] uppercase tracking-[0.4em] font-bold opacity-50 block mb-4">Portfolio Index</span>
          <h1 class="text-6xl md:text-8xl font-serif mb-8">
            <span class="lang-en">Projects</span>
            <span class="lang-ja">プロジェクト</span>
          </h1>
          <p class="text-xl md:text-2xl opacity-60 leading-relaxed font-light">
            <span class="lang-en">A curation of hybrid cultural innovations, digital-physical products, and immersive experiences.</span>
            <span class="lang-ja">ハイブリッドな文化革新、デジタル・フィジカル製品、没入型体験のキュレーション。</span>
          </p>
        </div>
        
        <div class="hidden md:block text-right">
          <div class="text-[10px] uppercase tracking-[0.3em] font-bold opacity-30 mb-2">Total Entries</div>
          <div class="text-5xl font-serif">0{projects.length}</div>
        </div>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-24">
        {projects.map((project, index) => (
          <a href={`/projects/${project.slug}`} class="group relative block">
            <div class="aspect-[16/10] bg-theme-alt overflow-hidden rounded-sm mb-8 relative">
              <img 
                src={project.image} 
                alt={project.title} 
                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-700 flex items-center justify-center">
                <div class="w-16 h-16 rounded-full bg-white/10 backdrop-blur-md border border-white/20 flex items-center justify-center scale-90 group-hover:scale-100 transition-transform duration-500">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-[10px] uppercase tracking-[0.3em] font-bold opacity-50">{project.category}</span>
                <span class="text-[10px] font-bold opacity-30 tracking-widest">{project.year}</span>
              </div>
              
              <h2 class="text-2xl md:text-4xl font-serif leading-tight group-hover:opacity-60 transition-opacity">
                <span class="lang-en">{project.title}</span>
                <span class="lang-ja">{project.titleJa}</span>
              </h2>
              
              <p class="text-base md:text-lg opacity-60 leading-relaxed max-w-xl">
                <span class="lang-en">{project.description}</span>
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  h1, h2 {
    font-family: var(--font-serif);
  }
</style>
